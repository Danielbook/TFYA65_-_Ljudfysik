%% Projekt
clear all; clc; close all;
% Ladda in ljudfil
    filename = 'My_life_is_potato.wav';
    [y, Fs] = audioread(filename); % y = audio data, Fs = Hertz
   	original = audioplayer(y, Fs);

    
    %% Restore to original signal
    
    testSignal = y;
    
    %% Play the Original
    play(original);
    pause(5);
    stop(original);
    
    %% Distortion
    distGain = 0.9; % amount of distortion added to signal -1 < a < 1 
    
    testSignal = distortion(distGain , testSignal);
    
    distorion = audioplayer(testSignal, Fs);
    
    %% Play Distortion
    play(distorion);
    pause(5);
    stop(distorion);

%% Delay
    N = 0.5;  % Delay amount seconds
    N = N * 44100;
    
    yDelay = delay(N, y);
    
    delay = audioplayer(yDelay, Fs);
    
    %% Play Delay
    play(delay);
    pause(5);
    stop(delay);

%% Tremolo
    % Varies the amplitude of the output signal 
    Fc = 12;        % SPEED
    alpha = 0.9;    % MIX
    
    y = tremolo(alpha, y, Fc, Fs) 

    tremolo = audioplayer(y, Fs);
    
    %% Play Tremolo
    play(tremolo);
    pause(5);
    stop(tremolo);

    