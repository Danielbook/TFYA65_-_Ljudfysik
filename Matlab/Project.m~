%% Projekt
clear all; clc; close all;
% Ladda in ljudfil
    filename = 'My_life_is_potato.wav';
    [y,Fs] = audioread(filename); % y = audio data, Fs = Hertz
   	original = audioplayer(y, Fs);

    %% Play the Original
    play(original);
    pause(5);
    stop(original);
    
    %% Distortion
    distGain = 0.9 % amount of distortion added to signal -1 < a < 1 
    yDist = distortion(distGain , y);
    distorion = audioplayer(yDist, Fs);
    
    %% Play Distortion
    play(distorion);
    pause(5);
    stop(distorion);

%% Delay
%     out = y;  % set up a new array, same size as old one
    N=44100;  % delay amount N/44100 seconds
%     for n=N+1:length(y)
%           out(n)=.8*out(n-N)+y(n);  % recursive echo
%     end
    yDelay = delay(N, y);
    
    delay = audioplayer(yDelay, Fs);
    
    %% Play Delay
    play(delay);
    pause(5);
    stop(delay);

%% Chorus
    out=y;  % set up a new array, same size as old one
    N=1000;  % delay amount N/44100 seconds
   
    for n=N+1:length(y)
          out(n,1)=y(n,1)+y(n-N,2);  % echo right-to-left!
    out(n,2)=y(n,2)+y(n-N,1);  % echo left-to-right!
    end
    
    chorus = audioplayer(out, Fs);
    
    play(chorus);
    pause(5);
    stop(chorus);

%% Play file

    